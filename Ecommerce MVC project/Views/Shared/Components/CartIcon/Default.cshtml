@model int

<style>
    :root {
        --primary-color: #FFFFFF;
        --dark-bg: #0A0A0A;
        --text-color: #EAEAEA;
        --text-secondary: #737373;
    }

    .cart-icon-nav-link {
        color: var(--text-secondary);
        transition: color 0.2s ease;
        padding: 0.5rem;
    }

        .cart-icon-nav-link:hover {
            color: var(--primary-color);
        }

    .cart-icon-wrapper {
        position: relative;
        display: inline-block;
    }

    .cart-icon {
        font-size: 1.4rem;
    }

    .cart-badge {
        position: absolute;
        top: -6px;
        right: -9px;
        background-color: var(--primary-color);
        color: var(--dark-bg);
        border-radius: 50%;
        width: 20px;
        height: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.7rem;
        font-weight: 700;
        border: 2px solid var(--dark-bg);
    }
</style>

<a asp-controller="Cart" asp-action="Index" class="nav-link cart-icon-nav-link">
    <div class="cart-icon-wrapper">
        <i class="fa-solid fa-shopping-bag cart-icon"></i>
        @if (Model > 0)
        {
            <span class="cart-badge">
                @Model
            </span>
        }
    </div>
</a>
