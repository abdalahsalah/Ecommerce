@model Ecommerce_MVC_project.Models.CheckoutViewModel

@{
    ViewData["Title"] = "Checkout";
}

<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProStore</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" xintegrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" xintegrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        :root {
            --primary-color: #FFFFFF;
            --dark-bg: #0A0A0A;
            --content-bg: #111111;
            --card-bg: #181818;
            --border-color: #2a2a2a;
            --text-color: #EAEAEA;
            --text-secondary: #888888;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--dark-bg);
            color: var(--text-color);
            min-height: 100vh;
        }

        .checkout-wrapper {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 1.5rem;
        }

        .checkout-header h1 {
            font-weight: 700;
        }

        .card {
            background-color: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 12px;
        }

        .form-label {
            font-weight: 500;
            color: var(--text-secondary);
            margin-bottom: 0.5rem;
        }

        .form-control {
            background-color: var(--content-bg);
            border: 1px solid var(--border-color);
            color: var(--text-color);
            border-radius: 8px;
            padding: 0.8rem 1rem;
            transition: border-color 0.2s ease, box-shadow 0.2s ease;
        }

            .form-control:read-only {
                background-color: #222;
            }

            .form-control:focus {
                background-color: var(--content-bg);
                border-color: var(--primary-color);
                color: var(--text-color);
                box-shadow: 0 0 0 3px rgba(255, 255, 255, 0.1);
            }

        .summary-card {
            padding: 2rem;
        }

            .summary-card h4 {
                font-weight: 600;
            }

        .list-group-item {
            background-color: transparent;
            border-color: var(--border-color);
            padding: 1rem 0;
        }

            .list-group-item:first-child {
                border-top: none;
            }

        .summary-total {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--text-color);
        }

        .btn-primary {
            background-color: var(--primary-color);
            color: var(--dark-bg);
            border-color: var(--primary-color);
            border-radius: 8px;
            font-weight: 600;
            padding: 0.9rem 1.5rem;
            transition: background-color 0.2s ease, transform 0.2s ease;
        }

            .btn-primary:hover {
                background-color: #d9d9d9;
                border-color: #d9d9d9;
                transform: translateY(-2px);
            }
    </style>
</head>
<body>
    <div class="checkout-wrapper">
        <div class="text-center mb-5 checkout-header">
            <h1>Checkout</h1>
            <p class="lead text-secondary">Please confirm your shipping details and place your order.</p>
        </div>

        <form asp-action="PlaceOrder" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row g-5">
                <div class="col-lg-7">
                    <h4 class="mb-3">Shipping Information</h4>
                    <div class="card p-4">
                        <input type="hidden" asp-for="CurrentUser.Id" />
                        <input type="hidden" asp-for="CurrentUser.Password" />
                        <input type="hidden" asp-for="CurrentUser.Role" />

                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="CurrentUser.Name" class="form-label"></label>
                                <input asp-for="CurrentUser.Name" class="form-control" readonly />
                            </div>

                            <div class="col-12">
                                <label asp-for="CurrentUser.Email" class="form-label"></label>
                                <input asp-for="CurrentUser.Email" class="form-control" readonly />
                            </div>

                            <div class="col-12">
                                <label asp-for="CurrentUser.PhoneNumber" class="form-label">Phone Number <span class="text-danger">*</span></label>
                                <input asp-for="CurrentUser.PhoneNumber" class="form-control" placeholder="e.g. 01xxxxxxxxx" required />
                                <span asp-validation-for="CurrentUser.PhoneNumber" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="CurrentUser.Address" class="form-label">Shipping Address <span class="text-danger">*</span></label>
                                <textarea asp-for="CurrentUser.Address" class="form-control" rows="3" placeholder="Enter your full shipping address (Street, City, etc.)" required></textarea>
                                <span asp-validation-for="CurrentUser.Address" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-5">
                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                        <span>Order Summary</span>
                        <span class="badge rounded-pill" style="background-color: var(--content-bg); color: var(--text-color);">@Model.CartItems.Count</span>
                    </h4>
                    <div class="card summary-card">
                        <ul class="list-group list-group-flush">
                            @foreach (var item in Model.CartItems)
                            {
                                <li class="list-group-item d-flex justify-content-between lh-sm">
                                    <div>
                                        <h6 class="my-0">@item.ProductName</h6>
                                        <small class="text-secondary">Quantity: @item.Quantity</small>
                                    </div>
                                    <span class="text-secondary">@item.Total.ToString("C")</span>
                                </li>
                            }
                            <li class="list-group-item d-flex justify-content-between summary-total pt-3">
                                <strong>Total</strong>
                                <strong>@Model.CartTotal.ToString("C")</strong>
                            </li>
                        </ul>
                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-lock me-2"></i> Place Your Order
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
