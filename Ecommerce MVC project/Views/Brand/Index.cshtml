@model List<Ecommerce_MVC_project.Models.Brand>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Brands";
}

<style>
    .card {
        background-color: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 12px;
    }

    .card-body {
        padding: 0;
    }

    .table {
        --bs-table-bg: transparent;
        --bs-table-border-color: var(--border-color);
        --bs-table-color: var(--text-color);
        --bs-table-hover-color: var(--text-color);
        --bs-table-hover-bg: var(--content-bg);
        margin-bottom: 0;
    }

        .table th {
            color: var(--text-secondary);
            font-weight: 500;
            text-transform: uppercase;
            font-size: 0.8rem;
            letter-spacing: 0.5px;
            border-top: none;
            padding: 1rem 1.5rem;
        }

        .table td {
            vertical-align: middle;
            padding: 1rem 1.5rem;
        }

        .table tbody tr:first-child td {
            border-top: none;
        }

    .brand-image {
        width: 80px;
        height: 50px;
        object-fit: contain;
        border-radius: 5px;
        background-color: var(--content-bg);
    }

    .description-cell {
        max-width: 300px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        color: var(--text-secondary);
    }

    .action-btn-group .btn {
        border-color: var(--border-color);
        color: var(--text-secondary);
    }

        .action-btn-group .btn:hover {
            background-color: var(--content-bg);
            color: var(--primary-color);
            z-index: 2;
        }

    .action-btn-group .btn-outline-danger {
        color: #e53935;
    }

        .action-btn-group .btn-outline-danger:hover {
            background-color: #e53935;
            border-color: #e53935;
            color: #fff;
        }

    .modal-content {
        background-color: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 15px;
    }

    .modal-header {
        background-color: var(--content-bg);
        border-bottom: 1px solid var(--border-color);
    }

        .modal-header .modal-title {
            font-weight: 600;
        }

    .modal-footer {
        border-top: 1px solid var(--border-color);
    }

    .btn-close {
        filter: invert(1) grayscale(100%) brightness(200%);
    }

    .modal-brand-image {
        width: 100%;
        max-height: 250px;
        object-fit: contain;
        border-radius: 10px;
        background-color: var(--content-bg);
        padding: 1rem;
        border: 1px solid var(--border-color);
    }

    #modalName {
        font-weight: 700;
        font-size: 2.25rem;
        color: var(--primary-color);
    }

    .details-list dt {
        color: var(--text-secondary);
        font-weight: 500;
        margin-bottom: 0.25rem;
    }

    .details-list dd {
        font-weight: 600;
        font-size: 1.1rem;
    }
</style>

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <h1>@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fa-solid fa-plus me-2"></i>Create New Brand
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Added By</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var brand in Model)
                    {
                        <tr data-id="@brand.Id"
                            data-name="@brand.Name"
                            data-description="@brand.Description"
                            data-image="@brand.ImagePath"
                            data-user="@(brand.User?.Name ?? "N/A")">
                            <td>
                                <img src="@brand.ImagePath" alt="@brand.Name" class="brand-image" />
                            </td>
                            <td>@brand.Name</td>
                            <td class="description-cell">
                                @brand.Description
                            </td>
                            <td>@(brand.User?.Name ?? "N/A")</td>
                            <td class="text-end">
                                <div class="btn-group action-btn-group">
                                    <button type="button" class="btn btn-sm btn-outline-light view-btn" data-bs-toggle="tooltip" title="View Details">
                                        <i class="fa-solid fa-eye"></i>
                                    </button>
                                    <a asp-action="Edit" asp-route-id="@brand.Id" class="btn btn-sm btn-outline-light" data-bs-toggle="tooltip" title="Edit">
                                        <i class="fa-solid fa-pencil"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@brand.Id" method="post" class="d-inline delete-form">
                                        <button type="submit" class="btn btn-sm btn-outline-danger delete-btn" data-bs-toggle="tooltip" title="Delete">
                                            <i class="fa-solid fa-trash-can"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsModalLabel"><i class="fa-solid fa-tags me-2"></i>Brand Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <div class="row align-items-center">
                    <div class="col-md-5 text-center">
                        <img id="modalImage" src="" class="modal-brand-image" alt="Brand Image" />
                    </div>
                    <div class="col-md-7">
                        <h2 id="modalName" class="mb-3"></h2>
                        <p id="modalDescription" class="text-secondary mb-4"></p>
                        <dl class="details-list">
                            <dt>Added By:</dt>
                            <dd id="modalUser"></dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            const tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                    Swal.fire({
                        title: 'Success!',
                        text: '@Html.Raw(TempData["SuccessMessage"])',
                        icon: 'success',
                        background: 'var(--card-bg)',
                        color: 'var(--text-color)',
                        confirmButtonColor: '#3085d6'
                    });
            </text>
        }

            document.querySelectorAll('.view-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const row = this.closest('tr');
                    document.getElementById('modalName').textContent = row.dataset.name;
                    document.getElementById('modalDescription').textContent = row.dataset.description;
                    document.getElementById('modalUser').textContent = row.dataset.user;
                    document.getElementById('modalImage').src = row.dataset.image;
                    const myModal = new bootstrap.Modal(document.getElementById('detailsModal'));
                    myModal.show();
                });
            });

            document.querySelectorAll('.delete-btn').forEach(button => {
                button.addEventListener('click', function(e) {
                    e.preventDefault();
                    const form = this.closest('form');
                    Swal.fire({
                        title: 'Are you sure?',
                        text: "You won't be able to revert this!",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#dc3545',
                        cancelButtonColor: '#6c757d',
                        confirmButtonText: 'Yes, delete it!',
                        background: 'var(--card-bg)',
                        color: 'var(--text-color)'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            form.submit();
                        }
                    });
                });
            });
        });
    </script>
}
