@model Ecommerce_MVC_project.Models.Order

@{
    ViewData["Title"] = "Order Details #" + Model.Id;
}

<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProStore</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" xintegrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" xintegrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        :root {
            --primary-color: #FFFFFF;
            --dark-bg: #0A0A0A;
            --content-bg: #111111;
            --card-bg: #181818;
            --border-color: #2a2a2a;
            --text-color: #EAEAEA;
            --text-secondary: #888888;
            --info-bg: #1d2b3f;
            --info-border: #385d8a;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--dark-bg);
            color: var(--text-color);
            min-height: 100vh;
        }

        .account-wrapper {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 1.5rem;
        }

        .account-header h1 {
            font-weight: 700;
        }

        .account-layout {
            display: grid;
            grid-template-columns: 280px 1fr;
            gap: 2rem;
            margin-top: 2rem;
        }

        .account-nav {
            background-color: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            padding: 1rem;
            align-self: flex-start;
        }

            .account-nav .nav-link {
                display: flex;
                align-items: center;
                padding: 0.8rem 1rem;
                color: var(--text-secondary);
                border-radius: 8px;
                margin-bottom: 0.25rem;
                font-weight: 500;
                transition: background-color 0.2s ease, color 0.2s ease;
            }

                .account-nav .nav-link .nav-icon {
                    width: 20px;
                    margin-right: 1rem;
                    text-align: center;
                }

                .account-nav .nav-link:hover {
                    background-color: var(--content-bg);
                    color: var(--primary-color);
                }

                .account-nav .nav-link.active {
                    background-color: var(--content-bg);
                    color: var(--primary-color);
                    font-weight: 600;
                }

        .account-content {
            background-color: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            padding: 2.5rem;
        }

            .account-content h3 {
                font-weight: 600;
                margin-bottom: 1.5rem;
                padding-bottom: 1rem;
                border-bottom: 1px solid var(--border-color);
            }

        .back-link {
            color: var(--text-secondary);
            text-decoration: none;
            font-weight: 500;
            transition: color 0.2s ease;
        }

            .back-link:hover {
                color: var(--primary-color);
            }

        .order-summary-card {
            background-color: var(--content-bg);
            border: 1px solid var(--border-color);
            border-radius: 10px;
            margin-top: 1.5rem;
        }

        .order-summary-header {
            padding: 1rem 1.5rem;
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 1rem;
            border-bottom: 1px solid var(--border-color);
        }

        .summary-item strong {
            color: var(--text-secondary);
            font-weight: 500;
        }

        .summary-item span {
            color: var(--text-color);
            font-weight: 600;
        }

        .order-items-list {
            padding: 1rem;
        }

        .list-group-item {
            background-color: transparent;
            border-bottom: 1px solid var(--border-color);
            padding: 1.5rem 0.5rem;
        }

            .list-group-item:last-child {
                border-bottom: none;
            }

        .item-image {
            width: 70px;
            height: 70px;
            object-fit: cover;
            border-radius: 8px;
            border: 1px solid var(--border-color);
        }
    </style>
</head>
<body>
    <div class="account-wrapper">
        <header class="account-header">
            <h1>My Account</h1>
            <p class="text-secondary">Manage your personal information, orders, and preferences.</p>
        </header>

        <div class="account-layout">
            <nav class="account-nav">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Index">
                            <i class="fa-solid fa-user-edit nav-icon"></i> Profile
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="Account" asp-action="MyOrders">
                            <i class="fa-solid fa-box-archive nav-icon"></i> My Orders
                        </a>
                    </li>
                   
                </ul>
            </nav>

            <main class="account-content">
                <a asp-action="MyOrders" class="back-link mb-3 d-inline-block"><i class="fa-solid fa-arrow-left me-2"></i>Back to My Orders</a>
                <h3>@ViewData["Title"]</h3>

                <div class="order-summary-card">
                    <div class="order-summary-header">
                        <div class="summary-item"><strong>Order Date:</strong> <span>@Model.OrderDate.ToString("F")</span></div>
                        <div class="summary-item"><strong>Total:</strong> <span>@Model.TotalPrice.ToString("C")</span></div>
                        <div class="summary-item"><strong>Status:</strong> <span>@Model.OrderStatus</span></div>
                    </div>
                    <div class="order-items-list">
                        <h5 class="mb-3">Items in your order:</h5>
                        <ul class="list-group list-group-flush">
                            @foreach (var item in Model.OrderDetails)
                            {
                                <li class="list-group-item d-flex align-items-center">
                                    <img src="@item.Product.ImagePath" class="me-3 item-image" alt="@item.Product.Name" />
                                    <div class="flex-grow-1">
                                        <strong class="d-block">@item.Product.Name</strong>
                                        <small class="text-secondary">Quantity: @item.Quantity &times; @item.Price.ToString("C")</small>
                                    </div>
                                    <div class="text-end">
                                        <strong>@((item.Quantity * item.Price).ToString("C"))</strong>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </main>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
