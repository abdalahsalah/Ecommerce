@model IEnumerable<Ecommerce_MVC_project.Models.Product>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Products";
}

<style>
    .card {
        background-color: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 12px;
    }

    .card-body {
        padding: 0;
    }

    .table {
        --bs-table-bg: transparent;
        --bs-table-border-color: var(--border-color);
        --bs-table-color: var(--text-color);
        --bs-table-hover-color: var(--text-color);
        --bs-table-hover-bg: var(--content-bg);
        margin-bottom: 0;
    }

        .table th {
            color: var(--text-secondary);
            font-weight: 500;
            text-transform: uppercase;
            font-size: 0.8rem;
            letter-spacing: 0.5px;
            border-top: none;
            padding: 1rem 1.5rem;
        }

        .table td {
            vertical-align: middle;
            padding: 1rem 1.5rem;
        }

        .table tbody tr:first-child td {
            border-top: none;
        }

    .product-image {
        width: 60px;
        height: 60px;
        object-fit: cover;
        border-radius: 8px;
        background-color: var(--content-bg);
    }

    .action-btn-group .btn {
        border-color: var(--border-color);
        color: var(--text-secondary);
    }

        .action-btn-group .btn:hover {
            background-color: var(--content-bg);
            color: var(--primary-color);
            z-index: 2;
        }

    .action-btn-group .btn-outline-danger {
        color: #e53935;
    }

        .action-btn-group .btn-outline-danger:hover {
            background-color: #e53935;
            border-color: #e53935;
            color: #fff;
        }

    .modal-content {
        background-color: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 15px;
    }

    .modal-header {
        background-color: var(--content-bg);
        border-bottom: 1px solid var(--border-color);
    }

        .modal-header .modal-title {
            font-weight: 600;
        }

    .modal-footer {
        border-top: 1px solid var(--border-color);
    }

    .btn-close {
        filter: invert(1) grayscale(100%) brightness(200%);
    }

    .modal-product-image {
        width: 100%;
        max-height: 400px;
        object-fit: contain;
        border-radius: 10px;
        background-color: var(--content-bg);
        padding: 1rem;
        border: 1px solid var(--border-color);
    }

    #modalName {
        font-weight: 700;
        font-size: 1.75rem;
        color: var(--primary-color);
    }

    .details-list dt {
        color: var(--text-secondary);
        font-weight: 500;
        margin-bottom: 0.25rem;
    }

    .details-list dd {
        font-weight: 600;
    }
</style>

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <h1>@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fa-solid fa-plus me-2"></i>Create New Product
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th>Category</th>
                        <th>Brand</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr data-name="@item.Name"
                            data-description="@item.Description"
                            data-image="@item.ImagePath"
                            data-price="@item.Price.ToString("C")"
                            data-stock="@item.Stock"
                            data-category="@(item.Category?.Name ?? "N/A")"
                            data-brand="@(item.Brand?.Name ?? "N/A")"
                            data-color="@(string.IsNullOrEmpty(item.Color) ? "N/A" : item.Color)"
                            data-size="@(string.IsNullOrEmpty(item.Size) ? "N/A" : item.Size)"
                            data-weight="@(string.IsNullOrEmpty(item.Weight) ? "N/A" : item.Weight)"
                            data-createdat="@item.CreatedAt.ToString("g")">
                            <td><img src="@item.ImagePath" alt="@item.Name" class="product-image" /></td>
                            <td>@item.Name</td>
                            <td>@item.Price.ToString("C")</td>
                            <td>@item.Stock</td>
                            <td>@(item.Category?.Name ?? "N/A")</td>
                            <td>@(item.Brand?.Name ?? "N/A")</td>
                            <td class="text-end">
                                <div class="btn-group action-btn-group">
                                    <button type="button" class="btn btn-sm btn-outline-light view-btn" data-bs-toggle="tooltip" title="View Details">
                                        <i class="fa-solid fa-eye"></i>
                                    </button>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-light" data-bs-toggle="tooltip" title="Edit">
                                        <i class="fa-solid fa-pencil"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline delete-form">
                                        <button type="submit" class="btn btn-sm btn-outline-danger delete-btn" data-bs-toggle="tooltip" title="Delete">
                                            <i class="fa-solid fa-trash-can"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsModalLabel"><i class="fa-solid fa-box-archive me-2"></i>Product Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <div class="row">
                    <div class="col-md-5">
                        <img id="modalImage" src="" class="modal-product-image" alt="Product Image" />
                    </div>
                    <div class="col-md-7">
                        <h3 id="modalName"></h3>
                        <p id="modalDescription" class="text-secondary"></p>
                        <hr style="border-color: var(--border-color);" />
                        <dl class="row details-list">
                            <dt class="col-sm-4">Price:</dt>
                            <dd class="col-sm-8" id="modalPrice"></dd>
                            <dt class="col-sm-4">Stock:</dt>
                            <dd class="col-sm-8" id="modalStock"></dd>
                            <dt class="col-sm-4">Category:</dt>
                            <dd class="col-sm-8" id="modalCategory"></dd>
                            <dt class="col-sm-4">Brand:</dt>
                            <dd class="col-sm-8" id="modalBrand"></dd>
                            <dt class="col-sm-4">Color:</dt>
                            <dd class="col-sm-8" id="modalColor"></dd>
                            <dt class="col-sm-4">Size:</dt>
                            <dd class="col-sm-8" id="modalSize"></dd>
                            <dt class="col-sm-4">Weight:</dt>
                            <dd class="col-sm-8" id="modalWeight"></dd>
                            <dt class="col-sm-4">Added On:</dt>
                            <dd class="col-sm-8" id="modalCreatedAt"></dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            const tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                    Swal.fire({
                        title: 'Success!',
                        text: '@Html.Raw(TempData["SuccessMessage"])',
                        icon: 'success',
                        background: 'var(--card-bg)',
                        color: 'var(--text-color)',
                        confirmButtonColor: '#3085d6'
                    });
            </text>
        }

            document.querySelectorAll('.delete-btn').forEach(button => {
                button.addEventListener('click', function(e) {
                    e.preventDefault();
                    const form = this.closest('form');
                    Swal.fire({
                        title: 'Are you sure?',
                        text: "This action cannot be undone!",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#dc3545',
                        cancelButtonColor: '#6c757d',
                        confirmButtonText: 'Yes, delete it!',
                        background: 'var(--card-bg)',
                        color: 'var(--text-color)'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            form.submit();
                        }
                    });
                });
            });

            document.querySelectorAll('.view-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const row = this.closest('tr');
                    document.getElementById('modalName').textContent = row.dataset.name;
                    document.getElementById('modalDescription').textContent = row.dataset.description;
                    document.getElementById('modalImage').src = row.dataset.image;
                    document.getElementById('modalPrice').textContent = row.dataset.price;
                    document.getElementById('modalStock').textContent = row.dataset.stock;
                    document.getElementById('modalCategory').textContent = row.dataset.category;
                    document.getElementById('modalBrand').textContent = row.dataset.brand;
                    document.getElementById('modalColor').textContent = row.dataset.color;
                    document.getElementById('modalSize').textContent = row.dataset.size;
                    document.getElementById('modalWeight').textContent = row.dataset.weight;
                    document.getElementById('modalCreatedAt').textContent = row.dataset.createdat;
                    new bootstrap.Modal(document.getElementById('detailsModal')).show();
                });
            });
        });
    </script>
}
