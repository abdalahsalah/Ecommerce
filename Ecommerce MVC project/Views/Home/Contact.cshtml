@{
    ViewData["Title"] = "Contact Us";
}

<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProStore</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" xintegrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" xintegrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        :root {
            --primary-color: #FFFFFF;
            --dark-bg: #0A0A0A;
            --content-bg: #111111;
            --card-bg: #181818;
            --border-color: #2a2a2a;
            --text-color: #EAEAEA;
            --text-secondary: #888888;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--dark-bg);
            color: var(--text-color);
        }

        .map-section {
            height: 400px;
            width: 100%;
        }

            .map-section iframe {
                width: 100%;
                height: 100%;
                border: 0;
                filter: invert(100%) grayscale(90%);
            }

        .contact-section {
            padding: 5rem 0;
        }

        .contact-header h1 {
            font-weight: 700;
        }

        .contact-info-card {
            background-color: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            padding: 2rem;
            height: 100%;
        }

        .info-item {
            display: flex;
            align-items: flex-start;
            margin-bottom: 2rem;
        }

        .info-icon {
            font-size: 1.5rem;
            color: var(--primary-color);
            margin-right: 1.5rem;
            min-width: 30px;
            text-align: center;
        }

        .info-item strong {
            display: block;
            color: var(--text-color);
            margin-bottom: 0.25rem;
        }

        .info-item span {
            color: var(--text-secondary);
        }

        .contact-form-card {
            background-color: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            padding: 2.5rem;
        }

        .form-label {
            font-weight: 500;
            color: var(--text-secondary);
            margin-bottom: 0.5rem;
        }

        .form-control {
            background-color: var(--content-bg);
            border: 1px solid var(--border-color);
            color: var(--text-color);
            border-radius: 8px;
            padding: 0.8rem 1rem;
            transition: border-color 0.2s ease, box-shadow 0.2s ease;
        }

            .form-control:focus {
                background-color: var(--content-bg);
                border-color: var(--primary-color);
                color: var(--text-color);
                box-shadow: 0 0 0 3px rgba(255, 255, 255, 0.1);
            }

        .btn-primary {
            background-color: var(--primary-color);
            color: var(--dark-bg);
            border-color: var(--primary-color);
            border-radius: 8px;
            font-weight: 600;
            padding: 0.8rem 1.5rem;
        }
    </style>
</head>
<body>
    <div class="map-section">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3447.587820980501!2d31.74973161511927!3d30.22055598181827!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1457fd3967411c97%3A0x204550aeb045a46a!2s10th%20of%20Ramadan%20City%2C%20Ash%20Sharqia%20Governorate!5e0!3m2!1sen!2seg!4v1672526151098!5m2!1sen!2seg" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>

    <div class="contact-section">
        <div class="container">
            <div class="text-center mb-5 contact-header">
                <h1 class="display-4">@ViewData["Title"]</h1>
                <p class="lead text-secondary">We'd love to hear from you! Whether you have a question about features, trials, pricing, or anything else, our team is ready to answer all your questions.</p>
            </div>

            <div class="row g-4">
                <div class="col-lg-5">
                    <div class="contact-info-card">
                        <h4 class="mb-4">Get in Touch</h4>
                        <div class="info-item">
                            <i class="fas fa-map-marker-alt info-icon"></i>
                            <div>
                                <strong>Address:</strong><br>
                                <span>123 E-Commerce St, Business City, 11511</span>
                            </div>
                        </div>
                        <div class="info-item">
                            <i class="fas fa-phone-alt info-icon"></i>
                            <div>
                                <strong>Phone:</strong><br>
                                <span>+20 123 456 7890</span>
                            </div>
                        </div>
                        <div class="info-item">
                            <i class="fas fa-envelope info-icon"></i>
                            <div>
                                <strong>Email:</strong><br>
                                <span>support@prostore.com</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-7">
                    <div class="contact-form-card">
                        <h4 class="mb-4">Send us a Message</h4>
                        <form>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="name" class="form-label">Name</label>
                                    <input type="text" class="form-control" id="name" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="email" class="form-label">Email</label>
                                    <input type="email" class="form-control" id="email" required>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="subject" class="form-label">Subject</label>
                                <input type="text" class="form-control" id="subject" required>
                            </div>
                            <div class="mb-3">
                                <label for="message" class="form-label">Message</label>
                                <textarea class="form-control" id="message" rows="5" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Send Message</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
